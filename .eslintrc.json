{
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "extends": [
    "airbnb-base"
  ],
  "env": {
    "node": true,
    "browser": true
  },
  "rules": {
    "no-underscore-dangle": [
      2,
      {
        "allow": [
          "__filename",
          "__dirname"
        ]
      }
    ],
    "no-console": false,
    "import/extensions": [
      "warn",
      "ignorePackages",
      {
        "js": "always"
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ]
  }
}